@model Employee
@{
    ViewData["Title"] = "GetEmployee";
}

<h1>GetEmployee</h1>
<div class="container">
    <div class="card">
        <div class="card-header">Data of an Employee</div>
        <div class="card-body">
            <p> @Model.Id - @Model.Name - @Model.Designation - @Model.Sex </p>
        </div>
        <div class="card-footer">
            @Html.ActionLink("Add New Employee", "Index", "Employee");
        </div>
    </div>
</div>
