
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="card">
        @using (Html.BeginForm())
        {
            <div class="card-header">New Employee</div>
            <div class="card-body">
                <div class="row">
                    Id:
                    <input type="number" name="Id" />
                </div>
                <div class="row">
                    Name:
                    <input type="text" name="Name" />
                </div>
                <div class="row">
                    Designation:
                    <input type="text" name="Designation" />
                </div>
                Sex:
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Sex" id="inlineRadio1" value="Male">
                    <label class="form-check-label" for="inlineRadio1">Male</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="Sex" id="inlineRadio2" value="Female">
                    <label class="form-check-label" for="inlineRadio2">Female</label>
                </div>
                

            </div>
            <div class="card-footer">
                <div class="form-group">
                    <a asp-controller="Employee" asp-action="listedEmployees">Find from added Employee</a>
                    </div>
                <div class="form-group">
                <input type="submit" value="Submit" />
                    </div>
            </div>
        }
    </div>
</div>

