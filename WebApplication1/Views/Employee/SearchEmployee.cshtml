@model Employee
@{
    ViewData["Title"] = "SearchEmployee";
}

<div class="container">
    <div class="card">
        <div class="card-header">Display Data</div>
        <div class="card-body">
            @if (Model == null)
            {
                <h2>No Data Available !!!!</h2>
            }
            else
            {
                <h3>
                    @Model.Id - @Model.Name - @Model.Designation - @Model.Sex
                </h3>
            }
        </div>
    </div>
</div>
