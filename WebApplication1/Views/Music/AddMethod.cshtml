@model Album;
@{
    ViewData["Title"] = "AddMethod";
}

<div class="container">
    <div class="card">
        @using (Html.BeginForm())
        {
            <div class="card-header">Add Album</div>
            <div class="card-body">

                <div class="form-group">
                    Id:
                    <input type="number" class="form-control" name="Id" />
                </div>
                <div class="form-group">
                    Name:
                    <input type="text" class="form-control" name="Name" />
                </div>
                <div class="form-group">
                Type:
                @*<select class="form-select" name="Type">
                    <option selected>Select Type</option>
                    <option value="Spanish">Spanish</option>
                    <option value="Jazz">Jazz</option>
                    <option value="Romantic">Romantic</option>
                    <option value="Poetic">Poetic</option>
                    <option value="DJ">DJ</option>
                    <option value="Christmas">Christmas</option>
                </select>*@
                    <select class="form-control" name="Type" asp-items="@ViewBag.albumTypes">

                    </select>
                    </div>
                <div class="form-group">
                    Sound:
                    <select class="form-control" asp-for="Sound" asp-items="@ViewBag.soundTypes">

                    </select>
                </div>
                Category:
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="inlineradio1" value="A" name="Category">
                    <label class="form-check-label" for="inlineradio1">A</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="inlineradio2" value="B" name="Category">
                    <label class="form-check-label" for="inlineradio2">B</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" id="inlineradio3" value="C" name="Category">
                    <label class="form-check-label" for="inlineradio3">C</label>
                </div><hr />
                Singer:
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="true" id="check_1" name="isSinger">
                    <label class="form-check-label" for="check_1">
                        Singer
                    </label>
                </div>



            </div>
            <div class="card-footer">
                <input type="submit" class="form-control" value="Submit" />
            </div>
        }
        </div>
        
</div>
