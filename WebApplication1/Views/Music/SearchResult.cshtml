@model Album;
@{
    ViewData["Title"] = "SearchResult";
}

<div class="container">
    <div class="card">
        <div class="card-header">Display input</div>
        <div class="card-body">
            <h3>SearchResult for Id: @ViewData["Id"]</h3>
            @if (Model == null)
            {
                <h1>NO DATA AVAILABLE</h1>
            }
            else
            {
                <h1> ID = @Model.Id</h1>
                <h2> Name = @Model.Name</h2>
                <h3> Type = @Model.Type</h3>
                <h4> Singer = @Model.isSinger</h4>
                <h5> Sound = @Model.Sound</h5>
            }
        </div>
    </div>
</div>
